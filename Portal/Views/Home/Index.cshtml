@model PortalViewModel

@{
    ViewData["Title"] = @Html.DisplayTextFor(m => m.Title);
}

<div class="row">
    <div class="jumbotron">
        <h3>Random Key Generator</h3>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Key informations</h3>
        </div>
        <div class="panel-body">
            <div class="well"><b>DateTime: </b>@Html.DisplayTextFor(m => m.DateTimeNow)</div>
            <div style="word-wrap: break-word;" class="well"><b>Key: </b>@Html.DisplayTextFor(m => m.Key)</div>
            <div class="well"><b>Odd Sum:</b> @Html.DisplayTextFor(m => m.Sum)</div>
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Memory Information</h3>
        </div>
        <div class="panel-body">
            <div class="well"><b>GEN0 Collections:</b>@Html.DisplayTextFor(m => m.GC0)</div>
            <div class="well"><b>GEN1 Collections:</b> @Html.DisplayTextFor(m => m.GC1)</div>
            <div class="well"><b>GEN2 Collections:</b> @Html.DisplayTextFor(m => m.GC2)</div>
            <div class="well"><b>Current Memory:</b> @Html.DisplayTextFor(m => m.CurrentMemory)</div>
            <div class="well"><b>Process Memory:</b> @Html.DisplayTextFor(m => m.PrivateBytes)</div>
        </div>
    </div>
</div>